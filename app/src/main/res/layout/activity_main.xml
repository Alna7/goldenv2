<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- فیلد UUID -->
        <EditText
            android:id="@+id/uuid_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="UUID را وارد کنید"
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="12dp" />

        <!-- دکمه آپدیت کانفیگ -->
        <Button
            android:id="@+id/btn_update_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="آپدیت سرورها"
            android:layout_marginBottom="12dp" />

        <!-- دکمه اتصال/قطع اتصال -->
        <Button
            android:id="@+id/btn_connection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اتصال / قطع اتصال"
            android:layout_marginBottom="12dp" />

        <!-- اطلاعات اتصال -->
        <TextView
            android:id="@+id/connection_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="سرعت اتصال: -" />

        <TextView
            android:id="@+id/connection_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مدت اتصال: -" />

        <TextView
            android:id="@+id/connection_traffic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ترافیک مصرفی: -" />

        <!-- وضعیت تاخیر سرورها -->
        <TextView
            android:id="@+id/server_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="server delay : -" 
            android:textColor="#0066cc"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/connected_server_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="connected server delay : -"
            android:textColor="#0066cc"
            android:paddingTop="4dp" />

        <!-- مد اتصال -->
        <TextView
            android:id="@+id/connection_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="connection mode : -"
            android:textColor="#444"
            android:paddingTop="6dp" />

        <!-- نسخه هسته -->
        <TextView
            android:id="@+id/core_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Core Version: -"
            android:paddingTop="8dp" />

        <!-- دکمه عضویت در کانال -->
        <Button
            android:id="@+id/btn_subscribe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="عضویت در کانال"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
